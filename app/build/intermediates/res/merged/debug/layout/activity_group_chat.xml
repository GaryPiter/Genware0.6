<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/skin_header_bar_bg" >

        <ImageView
            android:id="@+id/image_group_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/text_page_bar_back_btn" />

        <TextView
            android:id="@+id/tv_chat_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="群聊"
            android:textColor="@color/skin_bar_text"
            android:textSize="18sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_room_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:hint="房间ID" />

    <Button
        android:id="@+id/creat_btn_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="创建房间" />

</LinearLayout><!-- From: file:/E:/AndroidStudio_Projects/Genware0.6/app/src/main/res/layout/activity_group_chat.xml -->